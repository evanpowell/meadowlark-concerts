---
import Layout from '../../layouts/Layout.astro';
import { fetchConcerts, getConcertBySlug, formatDate } from '../../data/concerts';

export async function getStaticPaths() {
  const concerts = await fetchConcerts();
  // Only generate watch pages for concerts that have streaming enabled
  return concerts
    .filter(concert => concert.streamVideoId && concert.streamPassword)
    .map(concert => ({
      params: { slug: concert.slug },
      props: { concert },
    }));
}

const { concert } = Astro.props;

if (!concert) {
  return Astro.redirect('/concerts');
}
---

<Layout title={`Watch: ${concert.artistName}`} description={`Live stream for ${concert.artistName} at Meadowlark Concerts`}>
  <!-- Password Gate -->
  <div id="password-gate" class="min-h-[70vh] flex items-center justify-center bg-cream">
    <div class="max-w-md w-full mx-4">
      <div class="bg-white rounded-lg shadow-md p-8 text-center">
        <h1 class="text-2xl font-bold text-meadow-dark mb-2">Private Stream</h1>
        <p class="text-gray-600 mb-6">{concert.artistName} &bull; {formatDate(concert.date)}</p>

        <form id="password-form" class="space-y-4">
          <div>
            <label for="password" class="block text-sm font-medium text-gray-700 mb-2">
              Enter your access code
            </label>
            <div class="relative">
              <input
                type="password"
                id="password"
                name="password"
                class="w-full px-4 py-3 pr-12 border border-gray-300 rounded-lg focus:ring-2 focus:ring-meadow focus:border-meadow outline-none"
                placeholder="Access code"
                required
              />
              <button
                type="button"
                id="toggle-password"
                class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-500 hover:text-gray-700 focus:outline-none"
                aria-label="Toggle password visibility"
              >
                <svg id="eye-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                </svg>
                <svg id="eye-off-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"></path>
                </svg>
              </button>
            </div>
          </div>
          <p id="error-message" class="text-red-600 text-sm hidden">
            Incorrect access code. Please try again.
          </p>
          <button
            type="submit"
            class="w-full bg-meadow hover:bg-meadow-dark text-white font-semibold px-6 py-3 rounded-lg transition-colors"
          >
            Watch Stream
          </button>
        </form>

        <p class="mt-6 text-sm text-gray-500">
          The access code was sent to donors via email.
        </p>
      </div>
    </div>
  </div>

  <!-- Stream Content (hidden until authenticated) -->
  <div id="stream-content" class="hidden">
    <!-- Header -->
    <section class="bg-meadow-dark text-white py-8">
      <div class="max-w-4xl mx-auto px-4 text-center">
        <p class="text-warm mb-2">{formatDate(concert.date)}</p>
        <h1 class="text-3xl md:text-4xl font-bold">{concert.artistName}</h1>
        <p class="text-white/80 mt-2">Live from Meadowlark House</p>
      </div>
    </section>

    <!-- Video Player -->
    <section class="bg-charcoal py-8">
      <div class="max-w-5xl mx-auto px-4">
        <div class="relative w-full" style="padding-bottom: 56.25%;">
          <iframe
            id="youtube-player"
            class="absolute inset-0 w-full h-full rounded-lg shadow-lg"
            src=""
            title={`${concert.artistName} live stream`}
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
          ></iframe>
        </div>
      </div>
    </section>

    <!-- Concert Info -->
    <section class="bg-cream py-8">
      <div class="max-w-4xl mx-auto px-4">
        <div class="bg-white rounded-lg p-6 shadow-sm">
          <h2 class="text-xl font-bold text-meadow-dark mb-4">About This Concert</h2>
          <div class="prose max-w-none">
            {concert.fullDescription.split('\n\n').map(paragraph => (
              <p class="text-charcoal mb-4">{paragraph}</p>
            ))}
          </div>

          {(concert.artistWebsite || concert.artistSpotify || concert.artistInstagram) && (
            <div class="mt-6 pt-6 border-t border-gray-200">
              <h3 class="text-sm font-semibold text-gray-500 uppercase mb-3">Follow the Artist</h3>
              <div class="flex flex-wrap gap-4">
                {concert.artistWebsite && (
                  <a
                    href={concert.artistWebsite}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-meadow hover:text-meadow-dark transition-colors"
                  >
                    Website &rarr;
                  </a>
                )}
                {concert.artistSpotify && (
                  <a
                    href={concert.artistSpotify}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-meadow hover:text-meadow-dark transition-colors"
                  >
                    Spotify &rarr;
                  </a>
                )}
                {concert.artistInstagram && (
                  <a
                    href={concert.artistInstagram}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-meadow hover:text-meadow-dark transition-colors"
                  >
                    Instagram &rarr;
                  </a>
                )}
              </div>
            </div>
          )}
        </div>
      </div>
    </section>

    <!-- Back Link -->
    <section class="py-6 bg-cream">
      <div class="max-w-4xl mx-auto px-4">
        <a href={`/concerts/${concert.slug}`} class="text-meadow hover:text-meadow-dark transition-colors">
          &larr; Back to Concert Details
        </a>
      </div>
    </section>
  </div>

  <script define:vars={{ password: concert.streamPassword, videoId: concert.streamVideoId, slug: concert.slug }}>
    const STORAGE_KEY = `meadowlark-stream-${slug}`;

    // Check if already authenticated
    function checkAuth() {
      const stored = localStorage.getItem(STORAGE_KEY);
      if (stored === password) {
        showStream();
      }
    }

    // Show the stream content
    function showStream() {
      document.getElementById('password-gate').classList.add('hidden');
      document.getElementById('stream-content').classList.remove('hidden');
      document.getElementById('youtube-player').src = `https://www.youtube.com/embed/${videoId}?autoplay=1`;
    }

    // Handle form submission
    document.getElementById('password-form').addEventListener('submit', function(e) {
      e.preventDefault();
      const input = document.getElementById('password').value;
      const errorMsg = document.getElementById('error-message');

      if (input === password) {
        localStorage.setItem(STORAGE_KEY, input);
        errorMsg.classList.add('hidden');
        showStream();
      } else {
        errorMsg.classList.remove('hidden');
        document.getElementById('password').value = '';
        document.getElementById('password').focus();
      }
    });

    // Toggle password visibility
    document.getElementById('toggle-password').addEventListener('click', function() {
      const passwordInput = document.getElementById('password');
      const eyeIcon = document.getElementById('eye-icon');
      const eyeOffIcon = document.getElementById('eye-off-icon');

      if (passwordInput.type === 'password') {
        passwordInput.type = 'text';
        eyeIcon.classList.add('hidden');
        eyeOffIcon.classList.remove('hidden');
      } else {
        passwordInput.type = 'password';
        eyeIcon.classList.remove('hidden');
        eyeOffIcon.classList.add('hidden');
      }
    });

    // Check auth on page load
    checkAuth();
  </script>
</Layout>
