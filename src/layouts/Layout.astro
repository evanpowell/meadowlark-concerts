---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Intimate house concerts in the Bauerle Ranch neighborhood of South Austin" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:title" content={`${title} | Meadowlark Concert Series`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://res.cloudinary.com/dwdju2eyb/image/upload/v1771699466/meadowlark-og_utmdgd.jpg" />
    <meta property="og:type" content="website" />

    <link rel="icon" type="image/png" href="https://res.cloudinary.com/dwdju2eyb/image/upload/w_32,h_32,c_fit/v1770824260/meadowlark_ef73va.png" />
    <link rel="apple-touch-icon" href="https://res.cloudinary.com/dwdju2eyb/image/upload/w_180,h_180,c_fit/v1770824260/meadowlark_ef73va.png" />
    <title>{title} | Meadowlark Concert Series</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <Header />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
  </body>
</html>
